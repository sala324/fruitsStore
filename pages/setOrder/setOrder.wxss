page{
  background: #eceff5;
}
.topBox{
  background: #1296db;
  height: 110rpx;
}
.addressWrap{
  position: absolute;
  margin: -40rpx 30rpx 0;
  background: #fff;
  width: 690rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow:3rpx 4rpx 9rpx 0rpx rgba(203,199,199,0.58);
  z-index: 2;
}
.addressWrap .address{
  white-space: nowrap;
  overflow: hidden;
  font-size: 30rpx;
  font-weight: bold;
}
.addressWrap .personInfo{
  font-size: 26rpx;
  color: #999;
  padding-top: 10rpx;
}
.addressWrap .personInfo .xingming{
  padding-right: 20rpx;
}
.wrap{
  margin:120rpx 30rpx 0;
  background: #fff;
}
.orderBox{
  border-radius: 20rpx;
  
}
.showAll{
  height: auto;
}
.orderBox .orderItem{
  height: 140rpx;
  display: flex;
  background: #fff;
  padding:20rpx;
  box-sizing: border-box;
}
.orderBox .orderItem image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.orderBox .orderItem .itemInfo{
  width: 580rpx;
  background: #fff;
}
.orderBox .orderItem .itemInfo .name{
  font-size: 30rpx;
  line-height: 40rpx;
  color: #333;
}
.orderBox .orderItem .itemInfo .priceInfo{
  font-size: 26rpx;
  line-height: 70rpx;
  display: flex;
}
.orderBox .orderItem .itemInfo .priceInfo .price{
  font-size: 26rpx;
  line-height: 70rpx;
  color: red;
  flex: 1;
}
.orderBox .orderItem .itemInfo .priceInfo .price2{
  font-size: 26rpx;
  line-height: 70rpx;
  color: #333;
  font-weight: bold;
}
.orderBox .orderItem .itemInfo .priceInfo .price2 text{
  color: #999;
  font-weight: normal;
  text-decoration-line: line-through;
}
.allNum{
  margin:0 30rpx;
  background: #efefef;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  border-radius: 40rpx;
}
