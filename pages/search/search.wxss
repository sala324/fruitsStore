.search{
  margin: 20rpx;
}
.searchWrap{
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center; /*定义body的元素垂直居中*/
  justify-content: center; /*定义body的里的元素水平居中*/
  position: relative;
}
input{
  height: 60rpx;
  background: #fafafa;
  border-radius: 60rpx;
  /* width: 590rpx; */
  flex: 1;
  padding: 0 20rpx;
}
.searchWrap cover-image{
  /* position: absolute; */
  /* margin-left: -50rpx; */
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  z-index: 2;
  right: 104rpx;
  margin-right: 10rpx;
  padding: 20rpx;
}
.searchBtn{
  display: inline-block;
  width: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}
.searchBtn image{
  width: 44rpx;
  height: 44rpx;
}
.searchBtn text{
  position: absolute;
  vertical-align: top;
  background: red;
  color: #fff;
  height: 26rpx;
  /* min-width: 26rpx; */
  line-height: 26rpx;
  font-size: 26rpx;
  padding: 0 6rpx;
  border-radius: 50%;
}
.title{
  margin-top: 40rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.title .clear{
  /* display: inline-block; */
  line-height: 50rpx;
  margin-top: 15rpx;
  float: right;
  color: #999;
  font-size: 26rpx;
}
.title .clear image{
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}
.itemWrap{
  
}
.item{
  height: 50rpx;
  line-height: 50rpx;
  background: #eee;
  padding: 0 20rpx;
  display: inline-block;
  margin:20rpx 20rpx 0 0;
  border-radius: 50rpx;
  color: #333;
  font-size: 26rpx;
}

.productWrap{
  width: 710rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 20rpx;
  font-size: 0;
}
.productWrap .productItem{
  display: inline-block;
  width: 345rpx;
  box-sizing: border-box;
  vertical-align: top;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.productWrap .productItem:nth-child(2n){
  margin-left: 20rpx;
}
.productWrap .productItem .productImgWrap,.productWrap .productItem .productImgWrap image{
  width: 300rpx;
  height: 300rpx;
}
.productWrap .productItem .productImgWrap{
  /* padding: 30rpx 0; */
}
.productName{
  font-size: 30rpx;
  color: #333;
  line-height: 36rpx;
  height: 76rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productPrice{
  height: 86rpx;
  display: flex;
  align-items: center; /*定义body的元素垂直居中*/
}
.productPrice .productPriceWrap{
  flex: 1;
}
.productPrice .productPriceWrap text{
  display: block;
}
.productPrice .productPriceWrap .salePrice{
  color: red;
  font-size: 40rpx;
}
.productPrice .productPriceWrap .originalPrice{
  color: #aaa;
  font-size: 30rpx;
  text-decoration-line: line-through;
}
.nodata{
  height: 60vh;
}