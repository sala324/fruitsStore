/* pages/renthouse/renthouse.wxss */

page{
  font-family: Microsoft YaHei, Arial, Helvetica, sans-serif;
}
.navWrap{
  position: fixed;
  border-top: 40rpx solid #fff;
  left: 0;
  top: 420rpx;
  width: 120rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #eceff5;
}
.nav{
  height: 90rpx;
  line-height: 90rpx;
  display: block;
  text-align: center;
}
.nav.active{
  color: #1296db;
  background: #fff;
}
swiper{
  margin-bottom: 20rpx;
}
swiper-item,swiper-item image{
  width: 750rpx;
  height: 300rpx;
}
.scrollWrap{
  margin-top: 20rpx;
  width: 100%;
  white-space: nowrap;
}
.navItem{
  display: inline-block;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 20rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
}
.navItem:last-child{
  margin-right:0rpx;
}
.productWrap{
  margin:20rpx 0 0 120rpx;
  /* width: 590rpx; */
  overflow: hidden;
  font-size: 0;
  background: #fff;
}
.productWrap .productItem{
  display: flex;
  margin: 20rpx 20rpx 14rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
  background: #fff;
  /* margin-top: 10rpx; */
}
.productItemRight{
  flex: 1;
  margin-left: 20rpx;
}
.productWrap .productItem .productImgWrap,.productWrap .productItem .productImgWrap image{
  width: 160rpx;
  height: 160rpx;
}
.productName{
  font-size: 30rpx;
  color: #333;
  line-height: 38rpx;
  height: 76rpx;
  margin-top: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productPrice{
  height: 86rpx;
  display: flex;
  align-items: center; /*定义body的元素垂直居中*/
}
.productPrice .productPriceWrap{
  flex: 1;
}
.productPrice .productPriceWrap text{
  display: block;
}
.productPrice .productPriceWrap .salePrice{
  color: red;
  font-size: 32rpx;
  display: inline-block;
}
.productPrice .productPriceWrap .originalPrice{
  color: #aaa;
  font-size: 26rpx;
  display: inline-block;
  text-decoration-line: line-through;
}
.itemNum{
  display: inline-block;
  color: #333;
  padding: 0 12rpx;
  vertical-align: top;
}
.topWrap{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background: #eceff5;
}
.searchWrap{
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  text-align: center;
}
.topBox{
  height: 420rpx;
}
.searchWrap image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
  vertical-align: top;
}
.searchWrap .searchText{
  color: #707070;
  font-size: 30rpx;
  padding-left: 12rpx;
}